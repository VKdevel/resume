<main>
    <div>

        <div class="card">
            <table style="border: 0px;">
                <tbody>
                    <tr>
                        <td style="border: 0px;">
                            <h1 class="ms-2">
                                {{navigation.Logo}}
                            </h1>
                        </td>
                        <td style="border: 0px;">
                            <div>
                                <ul class="nav justify-content-end">
                                    {{#each navigation.links}}
                                    <li class="nav-item">
                                        <a class="nav-link {{#if @last}}disabled{{/if}}" aria-current="page"
                                            href="{{href}}">{{text}}</a>
                                    </li>
                                    {{/each}}

                                </ul>

                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    {{#each breadcrumb}}
                    {{#if url}}
                    <li class="breadcrumb-item"><a href="{{url}}">{{name}}</a></li>
                    {{else}}
                    <li class="breadcrumb-item active" aria-current="page">
                        <a class="text-secondary" href="#">{{name}}</a>
                    </li>
                    {{/if}}
                    {{/each}}
                </ol>
            </nav>
        </div>

        {{#with productData}}
        <div class="conteiner">
            <div class="row">

                {{!-- первая колонка начало --}}
                <div class="col-6">
                    <div>
                        <img src="{{img}}" alt="product image">
                    </div>
                    <br>

                    {{#with info}}
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{title}}</h5>
                            <p>{{about}}</p>
                            <span style="font-size:30px; font-weight:bold;" class="text-lg">Price: {{price}}</span><br>
                            {{#each category}}
                            {{#if isHot}}
                            <span class="badge text-uppercase rounded-pill text-light text-bg-warning">{{name}}</span>
                            {{/if}}
                            {{#if isNew}}
                            <span class="badge rounded-pill text-bg-primary">{{name}}</span>
                            {{/if}}
                            {{#if isBonus}}
                            <span class="badge rounded-pill text-light text-bg-info">{{name}}</span>
                            {{/if}}
                            {{/each}}

                        </div>

                    </div>

                    {{/with}}
                    {{!-- end with card --}}

                    {{!-- первая колонка конец --}}
                </div>


                {{!-- вторая колонка начало --}}
                <div class="ms-5 col-5">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                {{#each item.head}}
                                <td>
                                    {{this}}
                                </td>
                                {{/each}}
                            </tr>
                        </thead>

                        <tbody>
                            {{#each item.body}}
                            <tr>
                                <td>
                                    {{this.[0]}}
                                </td>
                                <td>
                                    {{this.[1]}}
                                </td>
                                <td>
                                    {{this.[2]}}
                                </td>

                            </tr>
                            {{/each}}
                        </tbody>
                    </table>


                    <div class="card">
                        <div class="card-header text-bg-dark">{{param.title}}</div>
                        <ul class="list-group">
                            {{#each param.list}}
                            <li class="list-group-item">{{this}}</li>
                            {{/each}}
                        </ul>
                    </div>
                    <br>

                    {{#with alert}}
                    {{#if isError}}
                    <div class="alert alert-danger" role="alert">
                        {{text}}
                    </div>
                    {{/if}}
                    {{/with}}

                    {{!-- вторая колонка конец --}}
                </div>


                {{!-- конец div row --}}
            </div>


            <div class="card my-5">
                <div class="card-body">

                    {{#each actionList}}

                    {{#if isWarning}}
                    <div class="btn btn-primary">
                        {{name}}
                    </div>
                    {{/if}}

                    {{#if isError}}
                    <div class="btn btn-danger">
                        {{name}}
                    </div>
                    {{/if}}

                    {{#if isSuccess}}
                    <div class="btn btn-outline-success">
                        {{name}}
                    </div>
                    {{/if}}

                    {{#if isGood}}
                    <div class="btn btn-warning">
                        {{name}}
                    </div>
                    {{/if}}

                    {{/each}}
                </div>
            </div>







            {{!-- end productData --}}
            {{/with}}

        </div>
        <hr>


        {{#with goodsOtherBlock}}
        <section>
            <h2 class="text-center">{{title}}</h2>
            <div class="row">
                {{#each cards}}
                <div class="col-4 g-2">
                    <div class="card">
                        <img src="{{image}}" class="card-img-top" alt="{{title}}">
                        <div class="card-body">
                            <h5 class="card-title">{{title}}
                                {{#if isHot}}
                                <span class="badge text-uppercase rounded-pill text-bg-warning">Hot!</span>
                                {{/if}}
                                {{#if idNew}}
                                <span class="badge rounded-pill text-bg-primary">New</span>
                                {{/if}}
                            </h5>
                            <p class="card-text">{{description}}</p>
                        </div>
                    </div>

                </div>
                {{/each}}

            </div>
        </section>
        {{/with}}


        <hr>

        <section>
            {{#with service}}

            <div class="card text-bg-success text-center my-5">
                <div class="card-body">
                    <h5 class="card-title">{{title}}</h5>
                    <p class="ms-2">{{description}}</p>
                    {{#each buttons}}

                    <a class="btn btn-primary" href="{{link}}">{{text}}</a>
                    {{/each}}
                </div>
            </div>
            {{/with}}
        </section>

        <hr>

        <section>
            <div class="row">
                {{#each footer}}
                <div class="col-2">
                    <div class="nav flex-column">
                        <div class="nav-item">

                            <a class="nav-link text-primary" href="{{this.[0].link}}">{{this.[0].text}}</a><br>

                            <a class="nav-link text-primary" href="{{this.[1].link}}">{{this.[1].text}}</a><br>

                            <a class="nav-link text-primary" href="{{this.[2].link}}">{{this.[2].text}}</a><br>

                            <a class="nav-link disabled text-dark" href="{{this.[3].link}}">{{this.[3].text}}</a><br>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </section>



    </div>

</main>