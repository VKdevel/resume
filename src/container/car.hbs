<main>
    <div>
        {{> title data="Toyota Camry" h1=true }}

        <hr>
        <span>{{make}} {{model}} {{year}} {{color}}</span><br>

        <div class="accordion" id="accordionPanelsStayOpenExample">
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse"
                        data-bs-target="#panelsStayOpen-collapseOne" aria-expanded="false"
                        aria-controls="panelsStayOpen-collapseOne">
                        <strong>Features interior</strong>
                    </button>
                </h2>
                <div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse show">
                    <div class="accordion-body">
                        <strong>seats:</strong>
                        {{#with features.interior.seats}}
                        {{material}}, {{color}}, {{#if heated}}heated, {{/if}} {{#if ventilated}}ventilated, {{/if}}
                        {{/with}}
                        <br><br>
                        <strong>dashboard:</strong>
                        {{#with features.interior.dashboard}}
                        {{material}}, {{color}}<br>
                        display:{{display.type}}<br>
                        size: {{display.size}}<br>
                        resolution: {{display.resolution}}, {{#if touchscreen}}touchscreen{{/if}}
                        {{/with}}
                        <br><br>
                        <strong>audio</strong>
                        {{#with features.interior.audio}}
                        {{system}}, speakers {{speakers}}<br>
                        {{#if subwoofer}}subwoofer: yes <br>{{/if}}
                        {{#if bluetooth}}bluetooth: yes <br>{{/if}}
                        {{#if USB}}USB: yes <br>{{/if}}
                        {{/with}}

                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                        data-bs-target="#panelsStayOpen-collapseTwo" aria-expanded="false"
                        aria-controls="panelsStayOpen-collapseTwo">
                        <strong>Features exterior</strong>
                    </button>
                </h2>
                <div id="panelsStayOpen-collapseTwo" class="accordion-collapse collapse">
                    <div class="accordion-body">

                        {{#with features.exterior.wheels}}
                        <strong>wheels:</strong><br>
                        size: {{size}}<br>
                        type: {{type}}<br>
                        color: {{color}}<br>
                        {{/with}}
                        <br>

                        {{#with features.exterior.headlights}}
                        <strong>headlights:</strong><br>
                        type: {{type}}<br>
                        brightness: {{brightness}}<br>
                        {{#if automatic}}automatic: yes<br>{{/if}}
                        {{/with}}
                        <br>

                        {{#with features.exterior.sunroof}}
                        <strong>sunroof:</strong><br>
                        size: {{size}}<br>
                        type: {{type}}<br>
                        {{#if automatic}}automatic: yes<br>{{/if}}
                        {{/with}}
                        <br>



                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                        data-bs-target="#panelsStayOpen-collapseThree" aria-expanded="false"
                        aria-controls="panelsStayOpen-collapseThree">
                        <strong>SAFETY</strong>
                    </button>
                </h2>
                <div id="panelsStayOpen-collapseThree" class="accordion-collapse collapse">
                    <div class="accordion-body">

                        {{#with features.safety.airbags}}
                        <strong>airbags:</strong><br>
                        front: {{front}}<br>
                        side: {{side}}<br>
                        knee: {{knee}}<br>
                        rear: {{rear}}<br>
                        {{/with}}
                        <br>

                        {{#with features.safety.assistance}}
                        <strong>assistance:</strong><br>
                        {{#if blind_spot_monitoring}}blind_spot_monitoring: yes<br>{{/if}}
                        {{#if rear_cross_traffic_alert}}rear_cross_traffic_alert: yes<br>{{/if}}
                        {{#if lane_departure_warning}}lane_departure_warning: yes<br>{{/if}}
                        {{#if adaptive_cruise_control}}adaptive_cruise_control: yes<br>{{/if}}
                        {{#if collision_warning}}collision_warning: yes<br>{{/if}}
                        {{/with}}
                        <br>

                    </div>
                </div>
            </div>
        </div>

        <br><br>
        <div class="card">
            <div class="card-body">
                <strong class="me-auto">engine</strong>


                <div class="">
                    {{#with engine}}
                    type:{{type}},
                    displacement: {{displacement}},
                    horsepower: {{horsepower}},
                    torque:{{torque}},
                    transmission:{{transmission.type}}, {{transmission.gears}} gears
                    {{/with}}
                </div>
            </div>
        </div>

        <br><br>
        <div class="card">
            <div class="card-body">
                <strong class="me-auto">fuel_economy</strong>


                <div class="">
                    {{#with fuel_economy}}
                    city:{{city}} litrov<br>
                    highway: {{highway}} litrov<br>
                    combined: {{combined}} litrov<br>
                    {{/with}}
                </div>
            </div>
        </div>

        <br><br>
        <div class="card">
            <div class="card-body">
                <strong class="me-auto">price</strong>


                <div class="text-primary">
                    {{#with price}}
                    base:{{base}} dollars<br>
                    destination: {{destination}} dollars<br>
                    options:
                    {{#with options}}
                    navigation:{{navigation}} dollars<br>
                    moonroof:{{moonroof}} dollars<br>
                    premium_paint:{{premium_paint}} dollars<br>
                    {{/with}}
                    <br>
                    <span class="text-uppercase">Total price:</span> {{total}} dollars<br>
                    {{/with}}
                </div>
            </div>
        </div>







    </div>

</main>