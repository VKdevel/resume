                    <div class="col-12">
                        <div class="card mb-3">
                            <div class="card-body">

                                <div class="card px-3">
                                    {{#with title}}
                                    <div class="mt-3 fw-bold">{{userName}}</div>
                                    <div class="">{{caption}}</div>
                                    <div class="">{{date}}</div>
                                    {{/with}}

                                    <hr>

                                    {{#with reviewBody}}

                                    <div class="my-2">{{seller.title}}: {{seller.value}}</div>
                                    <div class="mb-3">{{rating.title}}: {{rating.value}}</div>
                                    <div class="">{{text}}</div>
                                    <div class="my-2"><b>{{advantages.title}}</b><br> {{advantages.text}}</div>
                                    <div class="my-2"><b>{{advantages.title}}</b><br> {{advantages.text}}</div>

                                    <div class="row">
                                        {{#each images}}

                                        <img style="width:10%;" class="m-1 mb-3" src="{{this}}">

                                        {{/each}}
                                    </div>

                                </div>

                                <div class="row">
                                    {{#each coments}}
                                    <div class="col-1">
                                    </div>
                                    <div class="col-11">
                                        <div class="card my-3">
                                            <div class="card-body">
                                                <div class="fw-bold">{{userName}}</div>
                                                <div>{{date}}</div>
                                                <p class="my-3">{{text}}</p>
                                            </div>
                                        </div>
                                    </div>
                                    {{/each}}

                                </div>
                                {{/with}}

                            </div>

                        </div>
                    </div>