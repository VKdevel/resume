<section>
    {{#with data}}
    <h2 class="text-center">{{title}}</h2>
    <div class="row">
        {{#each cards}}
        <div class="col-4 g-2">
            <div class="card">
                <img src="{{image}}" class="card-img-top" alt="{{title}}">
                <div class="card-body">
                    <h5 class="card-title">{{title}}
                        {{#if isHot}}
                        <span class="badge text-uppercase rounded-pill text-bg-warning">Hot!</span>
                        {{/if}}
                        {{#if idNew}}
                        <span class="badge rounded-pill text-bg-primary">New</span>
                        {{/if}}
                    </h5>
                    <p class="card-text">{{description}}</p>
                </div>
            </div>

        </div>
        {{/each}}

    </div>
    {{/with}}
</section>