<div class="my-4 text-center">
    {{#with data}}
    <div class="card text-bg-dark">
        <div class="card-body">

            <h2>{{header}}</h2>
            <p>{{description}}</p>

            {{#each buttons}}
            <a href="{{link}}" class="btn btn-primary mb-2">{{text}}</a>
            {{/each}}

        </div>
    </div>
    {{/with}}
</div>